{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.options": {
    "configFile": ".eslintrc.json"
  },
  "eslint.rules": {
    "quotes": "single",
    "semi": "always",
    "react/jsx-filename-extension": [
      1,
      { "extensions": [".js", ".jsx", ".tsx"] }
    ]
  }
}